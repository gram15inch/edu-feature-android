<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.learning.CustomViewPracFragment">

   <com.nuhlp.recyclerviewwithindex.components.MyCustomView
       android:id="@+id/myCustomView"
       android:layout_width="0dp"
       android:layout_height="100dp"
       android:layout_marginStart="40dp"
       android:layout_marginTop="200dp"
       android:layout_marginEnd="40dp"
       android:backgroundTint="@color/cardview_dark_background"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <View
       android:id="@+id/rect1"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_marginStart="300dp"
       android:layout_marginTop="900dp"
       android:background="@drawable/rect1"
       android:elevation="10dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/positionText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="179dp"
       android:text="TextView"
       android:textSize="35sp"
       app:layout_constraintStart_toStartOf="@+id/myCustomView"
       app:layout_constraintTop_toBottomOf="@+id/myCustomView" />
</androidx.constraintlayout.widget.ConstraintLayout>